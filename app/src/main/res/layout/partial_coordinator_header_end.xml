<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#ccf"
    tools:layout_height="@dimen/app_bar_height">

    <View
        android:id="@+id/v_anchor_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_anchor_action_bar"
        app:layout_constraintStart_toStartOf="@+id/v_anchor_action_bar"
        app:layout_constraintTop_toTopOf="@+id/v_anchor_action_bar"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/v_1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="#ffc"
        android:rotation="-360"
        app:layout_constraintBottom_toBottomOf="@+id/v_anchor_action_bar"
        app:layout_constraintEnd_toStartOf="@+id/v_3"
        app:layout_constraintTop_toTopOf="@+id/v_anchor_action_bar" />

    <View
        android:id="@+id/v_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="#fcf"
        app:layout_constraintBottom_toBottomOf="@+id/v_1"
        app:layout_constraintEnd_toEndOf="@+id/v_1"
        app:layout_constraintStart_toStartOf="@+id/v_1"
        app:layout_constraintTop_toTopOf="@+id/v_1" />

    <View
        android:id="@+id/v_3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="#cff"
        android:rotation="360"
        app:layout_constraintBottom_toBottomOf="@+id/v_anchor_action_bar"
        app:layout_constraintEnd_toEndOf="@+id/v_anchor_action_bar"
        app:layout_constraintTop_toTopOf="@+id/v_anchor_action_bar" />
</android.support.constraint.ConstraintLayout>